<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ob.unibanca.sicf.reportes.mapper.ITablasForaneasMapper">

    <sql id="consultaVistaMant">
       SELECT
       	  ID_TABLA				AS ID_TABLA, 
		  TABLA      			AS TABLA,
		  ID_TABLA_FORANEA		AS ID_TABLA_FORANEA,
		  TABLA_FORANEA        	AS TABLA_FORANEA,
		  ID_CAMPO_FK			AS ID_CAMPO_FK,
		  CAMPO_FK				AS CAMPO_FK
		FROM VIE_REP_TABLAS_FORANEAS
    </sql>

     <select id="buscarTodos" resultType="TablasForaneas"
            statementType="PREPARED">
        <include refid="consultaVistaMant"/>
    </select>
    
    <select id="buscarPorCriterios" resultType="TablasForaneas" parameterType="CriterioBusquedaTablasForaneas"
            statementType="PREPARED">
        <include refid="consultaVistaMant"/>
        <if  test="tabla != null and tabla != '' ">
        	WHERE
       			TABLA = #{tabla}
        </if>
    </select>

</mapper>
