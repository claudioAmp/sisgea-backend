<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ob.unibanca.sicf.generadorconsultas.mapper.ICampoQueryMapper">

	<sql id="consultaVistaMant">
       SELECT 
         *
		FROM VIE_MAN_REP_CAMPO_QUERY
	</sql>
     <select id="buscarTodos" resultType="CampoQuery" statementType="PREPARED">
        <include refid="consultaVistaMant"/>
    </select>
    <select id="buscarPorCriterios" resultType="CampoQuery" parameterType="CriterioBusquedaCampoQuery" statementType="PREPARED">
        <include refid="consultaVistaMant"/>
        <if  test=" idTablaQuery!= null and idTablaQuery != '' ">
       			WHERE
       			ID_TABLA_QUERY =#{idTablaQuery}
        </if>
         <if  test=" idCampoQuery!= null and idCampoQuery != '' ">
       			WHERE
       			ID_CAMPO_QUERY =#{idCampoQuery}
        </if>
        <if  test=" idReporte!= null and idReporte != '' ">
       			WHERE
       			ID_REPORTE =#{idReporte}
        </if>
        <if  test=" idTabla!= null and idTabla != ''">
       			WHERE
       			ID_TABLA =#{idTabla}
        </if>
        
        <if  test="idTabla!= null and idTabla != ''and idReporte!= null and idReporte != ''">
        	WHERE
        	    ID_REPORTE =#{idReporte}
       			AND ID_TABLA =#{idTabla}
        </if>
    </select>
   
    
     <select id="mantener" parameterType="ParametroMantenimiento" statementType="CALLABLE">
        {
            CALL PKG_MAN_REP.prc_man_rep_campo_query(
                #{modo, 						     jdbcType=VARCHAR, mode=IN},
                #{objetoMantenido.idCampoQuery,      jdbcType=INTEGER, mode=IN},
                #{objetoMantenido.idTablaQuery,      jdbcType=NUMERIC, mode=IN},
                #{objetoMantenido.idCampo,  	     jdbcType=NUMERIC, mode=IN},
                #{objetoMantenido.idCampoQueryFrom,  jdbcType=NUMERIC, mode=IN},
                #{objetoMantenido.orderBy,  	     jdbcType=VARCHAR, mode=IN},
                #{objetoMantenido.enSelect , 	     jdbcType=NUMERIC, mode=IN},
                #{objetoMantenido.enGroupBy ,        jdbcType=NUMERIC, mode=IN},
                #{objetoMantenido.funcionGrupo ,     jdbcType=VARCHAR, mode=IN},
                #{usuario, 						     jdbcType=VARCHAR, mode=IN}
            )
        }
    </select>
</mapper>
