<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.taller.sisgea.mantenimientosgenerales.mapper.IDocenteMapper">

    <sql id="consultaVistaMant">
       SELECT
       	 id_docente,
       	 nombres,
       	 apellidos,
       	 tipo
       FROM vie_man_docente
    </sql>

    <sql id="orden">
    	ORDER BY id_docente ASC
    </sql>

    <select id="buscarTodos" resultType="Docente"
            statementType="PREPARED">
        <include refid="consultaVistaMant"/>
        <include refid="orden"/>
    </select>

</mapper>
