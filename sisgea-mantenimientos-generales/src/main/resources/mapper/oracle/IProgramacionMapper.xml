<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.taller.sisgea.mantenimientosgenerales.mapper.IProgramacionMapper">

	<sql id="consultaVistaMant">
        SELECT id_curso
        	 , descripcion_curso
        	 , seccion
        	 , id_docente
        	 , nombres_docente
        	 , tope
        	 , turno
        	 , descripcion_turno
        FROM VIE_MAN_PROGRAMACION_ACADEMICA
    </sql>
    
    <sql id="orden">
    	ORDER BY id_curso
    </sql>
	
    <select id="buscarTodos" resultType="Programacion" statementType="PREPARED">
        <include refid="consultaVistaMant"/>
        <include refid="orden"/>
    </select>
    
    <select id="buscarProgramacion" resultType="Programacion">
        <include refid="consultaVistaMant"/>
        WHERE
                id_curso = #{idCurso}
        	AND seccion = #{seccion}
    </select>

</mapper>
